                        <div class="features__item-wrapper">
                            <div class="features__item" style="justify-content: normal;">
                                <img src="/images/icons/<%= candidate.report.weaknesses[weaknessesIndex].id.replace(/\s+/g, '_') %>.png" alt="Icon" class="features__item-icon">
                                <div class="features__item-copy">
                                    <h3 class="features__title features__title--brand features__item-title"><%=candidate.report.weaknesses[weaknessesIndex].title%></h3>
                                    <ul class="features__item-list">
                                        <% for (var wtxtIndex = 0; wtxtIndex < candidate.report.weaknesses[weaknessesIndex]['text'].length; wtxtIndex++) {
                                            if (candidate.report.weaknesses[weaknessesIndex]['text'][wtxtIndex] == '') { %>
