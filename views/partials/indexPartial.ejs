<form id="formInfo" method="post" action=<%= '/clients/' + customer._id + '/?sid=' + sid %>>
    <% const floatDir = ((pageText.textDir === 'rtl')?'left':'right'); %>
    <div id="intro1" style="height: 100%;;scroll:hidden;overflow: auto;">
        <div class="headline" style="z-index: 10; text-align: <%= pageText.textAlign %>">
            <p><%- customer.headlineText %></p></div>
        <div class="container introText"
             style="padding: 10px;margin-top: 0px; height: 100%; text-align: <%= pageText.textAlign %>">
            <div id="testInstructions"
                 style="margin-top: 60px;padding-right: 10px;padding-left: 10px;min-height:370px;">
                <p><%- (customer.instructionText !== undefined) ? customer.instructionText.replace('$checkbox',
                            "<div id='agreeDiv' class='squaredTwo' style='margin: 5px; margin-top: -5px;" + ((pageText.direction==='rtl')?'margin-left':'margin-right') +
                            ": 20px;'><input id='agree' class='' name='agree' type='checkbox' value='' style='vertical-align: bottom; margin: 3px;' ><label for='agree'></label></div>") : "Missing instruction text" %>
                </p>
            </div>
            <div id="companyDescription"
                 style="margin-top: 60px;padding-right: 10px;padding-left: 10px;min-height:370px;display: none;">
                <p><%- customer.companyDescription %></p>
            </div>
            <div id="next_btn"
                 style="padding-bottom: 20px;padding-<%= floatDir %>: 20px;float: <%= floatDir %>;margin-top: -20px;display: block;">
                <a class="imgBtn" onclick="goNext()">
                    <%= pageText.next %><b>❯</b>
                </a>
            </div>
            <div id="next_btn_gray"
                 style="padding-bottom: 20px;padding-<%= floatDir %>: 20px;float: <%= floatDir %>;margin-top: -20px;display: block;">
                <a class="imgBtnGray" onclick="redCheckbox()">
                    <%= pageText.next %><b>❯</b>
                </a>
            </div>
            <div id="back_btn"
                 style="padding-bottom: 20px;padding-<%= floatDir %>: 20px;float: <%= floatDir %>;margin-top: -20px;display: none;">
                <a class="imgBtn" onclick="goBack()">
                    <b>❮</b><%= pageText.back %>
                </a>
            </div>
        </div>
    </div>
</form>
