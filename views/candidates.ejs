<script>
    function textSorter(a, b) {
        if (a < b) return -1;
        if (a > b) return 1;
        return 0;
    }

    function numSorter(a, b) {
        a = parseFloat(a);
        b = parseFloat(b);
        if (a < b) return -1;
        if (a > b) return 1;
        return 0;
    }

    const candidatesTable = $('#candidates');
    candidatesTable.bootstrapTable({
        locale: 'he-IL', //FIXME: en-US
        pagination: true,
        search: true,
        onPostBody: function () {
            $('#candidates').editableTableWidget({
                editor: $('<textarea>'),
                preventColumns: [1, 2, 3, 4, 5 ]
            });
        }
    });

    candidatesTable.on('change', function(evt, newValue) {
        alert('Change!');
